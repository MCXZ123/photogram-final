<h1>Liked Photos</h1>

<% liked_photo_ids = @user.likes.pluck(:photo_id).uniq %>
<% @liked_photos = Photo.where(id: liked_photo_ids).order(created_at: :desc) %>

<% if @liked_photos.present? %>
  <% @liked_photos.each do |photo| %>
    <div style="margin-bottom: 20px;">
      <%= image_tag(photo.image.url) if photo.image.present? %>
      <p><%= photo.caption %></p>
      <p><%= link_to "View photo", photo_path(photo) %></p>
    </div>
  <% end %>
<% else %>
  <p>You havenâ€™t liked any photos yet.</p>
<% end %>
